{
  "name": "astro-modular",
  "version": "0.2.0",
  "type": "module",
  "description": "A minimal, elegant blog theme for Astro heavily inspired by Obsidian, designed for clarity, performance, and seamless compatibility with Obsidian markdown workflows.",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env ASTRO_CONTENT_COLLECTION_CACHE=false node scripts/setup-dev.mjs && node scripts/sync-images.js && node scripts/process-aliases.js && node scripts/generate-redirects.js && astro dev --host localhost --port 5000",
    "build": "node scripts/sync-images.js && node scripts/process-aliases.js && node scripts/generate-redirects.js && astro build",
    "preview": "astro preview --host localhost --port 5000",
    "sync-images": "node scripts/sync-images.js",
    "process-aliases": "node scripts/process-aliases.js",
    "generate-redirects": "node scripts/generate-redirects.js",
    "generate-redirects:dry-run": "node scripts/generate-redirects.js --dry-run",
    "generate-redirects:validate": "node scripts/generate-redirects.js --validate",
    "check-images": "node scripts/check-missing-images.js",
    "update-theme": "node scripts/update-theme.js",
    "update-theme:content": "node scripts/update-theme.js --update-content",
    "version": "node scripts/get-version.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.3.4",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.5.1",
    "@astrojs/tailwind": "^6.0.2",
    "@fontsource/inter": "^5.2.8",
    "@fontsource/jetbrains-mono": "^5.2.8",
    "@fortawesome/fontawesome-svg-core": "^7.0.1",
    "@fortawesome/free-brands-svg-icons": "^7.0.1",
    "@swup/astro": "^1.0.0",
    "@tailwindcss/typography": "^0.5.16",
    "astro": "^5.13.4",
    "astro-redirect-from": "^1.3.3",
    "fuse.js": "^7.1.0",
    "lucide": "^0.542.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-reading-time": "^2.0.2",
    "remark-toc": "^9.0.0",
    "sharp": "^0.34.3",
    "swup": "^4.8.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@types/hast": "^3.0.4",
    "@types/unist": "^3.0.3",
    "cross-env": "^10.0.0"
  }
}
